color1 = #b2b2b2;

body {
    background-color: #f2f2f2;
    font-size: 14px;
    font-family: 'Roboto', Sans-Serif;
}

.form-control {
    &:hover,
    &:focus {
        box-shadow: none;
    }
}

nav {
    background-color: #fff;
    border-bottom: 2px solid color1;
    .navbar-nav {
        li.nav-item {
            a.nav-link {
                border: solid 1px #fff;
                border-radius: 5px;
                color: #444;
                font-size: .9em;
                font-weight: bold;
                margin-right: 4px;
                padding: 5px 16px !important;
                transition: all 200ms;
                img {
                    position: relative;
                    top: -5px;
                    width: 25px;
                    margin-right: 4px !important;
                    border-radius: 50%;
                }
                &:hover {
                    background-color: #474545;
                    color: #fff;
                }
            }
            a.btn {
                border: 1px solid #474545;
                transition: all 200ms;
                &:hover {
                    background-color: #474545;
                    color: #fff;
                }
            }
        }

        .link-user {
            a {
                &:hover {
                    background-color: transparent !important;
                    color: #444 !important;
                }
            }
            .dropdown-menu {
                font-size: 14px;
                width: 75%;
                border: none !important;
                box-shadow: 2px 2px 4px 1px rgba(0,0,0,0.5);
                .dropdown-item {
                    font-weight: bold !important;
                    color: #444 !important;
                    padding: 4px -1px 2px 10px;
                    transition: all 200ms !important;
                    &:hover {
                        background-color: #ccc !important;
                    }
                }
            }
        }
    }
}

.wrapper {
    .panel {
        background-color: #fff !important;
        border-radius: 10px;
        border-bottom: 2px solid #aaa;
        width: 100%;
        .header {
            border-bottom: 1px solid #ccc;

            .title {
                display: inline-block;
                color: #19213d;
                font-size: 1.1em;
                padding: 12px 16px;
                margin-bottom: 0px;
            }
            ul {
                display: inline-block;
                float: right;
                margin-right: 30px;
                z-index: 999;
                li {
                    display: inline-block;
                    position: relative;
                    transition: all 200ms;
                    &:hover {
                        background-color: #F2F2F2;
                        color: black;
                    }
                    a {
                        display: inline-block;
                        padding: 11px;
                        text-decoration: none;
                        color: #444;
                    }
                    ul {
                        display: none;
                        background-color: white;
                        float: none;
                        position: absolute;
                        width: 160px;

                        li {
                            display: block;
                            width: 100%;

                        }
                    }
                    &:hover {
                        ul {
                            display: block;
                        }
                    }
                }
            }
        }
        .inside {
            padding: 16px;
            .opts {
                a {
                    display: inline-block;
                    padding: 0px 12px;
                }
            }
            .table td, .table th {

                border-style: none !important;
            }
            .form_search {
                display: none;
                margin-bottom: 16px;
                .btn {
                    width: 100%;
                }
            }
            .big_count {
                display: block;
                text-align: center;
                width: 100%;
                font-size: 2em;
            }
            .edit_avatar {
                a {
                    display: block;
                    margin: 0px auto;
                    position: relative;
                    width: 140px;
                    .overlay {
                        align-items: center;
                        background-color: rgba(0,0,0,0.55);
                        border-radius: 50%;
                        color: #fff;
                        display: none;
                        font-size: 2em;
                        justify-content: center;
                        height: 140px;
                        position: absolute;
                        width: 100%;
                        img {
                            width: 80px;
                        }
                    }
                    &:hover {
                        .overlay {
                            display: flex;
                        }
                    }
                }
                img {
                    border-radius: 50%;
                    display: block;
                    width: 100%;
                }
                .form-control {
                    display: none;
                }
            }
        }
        .link-a {
            color: #6B6B6B;
            transition: all 300ms;
            &:hover {
                color: #444;
                transform: translateY(-5px);
                font-weight: bold;
            }
        }
    }
}

.home_action_bar {
    background-color: #fff;
    border-radius: 4px;
    margin-top: 14px;
    padding: 14px;
    .categories {
        position: relative;
        &:hover {
            ul {
                display: block;
            }
        }
        a {
            display: block;
            padding: 8px;
            border-radius: 4px;
            width: 100%;
            background-color: #444;
            color: #fff;
            text-transform: uppercase;
            text-decoration: none;
            transition: all 100ms;
            &:hover {
                background-color: #000000;
            }
        }
        ul {
            display: none;
            list-style: none;
            padding: 0px;
            margin: 0px;
            position: absolute;
            width: 100%;
            li {
                a {
                    background-color: #f8f8f8;
                    border-radius: 0px;
                    color: #444;
                    &:hover {
                        background-color: #444;
                        color: #fff;
                    }
                    img {
                        position: relative;
                        margin-top: -5px;
                        margin-right: 12px;
                        width: 20px;
                    }
                }
            }
        }
    }
    .input-group {
        position: relative;
        i {
            position: absolute;
            font-size: 1.2em;
            top: 11px;
            left: 8px;
            z-index: 10;
            color: grey;
        }
        .form-control {
            border-radius: 4px 0px 0px 4px !important;
            z-index: 2;
            padding-left: 32px;
        }
        &:focus-within {
            i {
                color: #612530;
            }
        }
    }

    .btn-outline-secondary {
        border-color: #ced4da !important;
        color: grey !important;
        &:hover {
            background-color: #444 !important;
            color: white !important;
        }
    }
}

.mdslider {
    display: flex;
    flex-wrap: wrap;
    margin-top: 24px;
    position: relative;
    min-height: 380px;
    width: 100%;
    overflow: hidden;

    ul.navigation {
        display: block;
        width: 100%;
        margin: 0px;
        padding: 0px;
        position: absolute;
        overflow: hidden;
        top: calc(50% - 18px);
        z-index: 9;
        li {
            display: inline-flex;
            float: left;
            &:first-child {
                margin-left: 16px;
                a {
                    i {
                        position: relative;
                        margin-left: -4px;
                    }
                }
            }
            &:last-child {
                margin-right: 16px;
                float: right;
                a {
                    i {
                        position: relative;
                        margin-left: 4px;
                    }
                }
            }
            a {
                align-items: center;
                background-color: rgba(0, 0, 0,0.5);
                border-radius: 50%;
                display: flex;
                justify-content: center;
                color: white;
                width: 36px;
                height: 36px;
                text-decoration: none;
                font-size: 1.5em;
                transition: all 200ms;

                &:hover {
                    background-color: #444;
                }
            }
        }
    }
    .md-slider-item {
        position: absolute;
        align-items: center;
        display: none;
        font-size: 4em;
        justify-content: center;
        background-color: white;
        color: #444;
        width: 100%;
        border-radius: 4px;
        min-height: 380px;
        transition: all 700ms ease-in-out;
    }
}
















@media only screen and (max-width: 991px) {
    nav {
        .navbar-nav {
            display: block !important;
            margin-top: 16px;
            overflow: hidden;
            li.nav-item {
                display: block;
                float: left;
                margin-right: 0px;
                margin-bottom: 8px;
                width: 50%;
                a.nav-link {
                    text-align: center;
                    i {
                        font-size: 3em;
                    }
                    span {
                        display: block;
                        font-size: 1.3em;
                        font-weight: normal;
                        margin-top: 4px;
                        width: 100%;
                    }
                    &:hover {
                        background-color: transparent;
                        color: black;
                    }
                }
                &:last-child {
                    width: 100%;
                }
                &:nth-last-child(2) {
                    width: 100%;
                }

            }
            .link-user {
                font-size: 1.3em;
                border-radius: 5px;
                a {
                    img {
                        width: 40px !important;
                    }
                }
                .dropdown-menu {
                    border: none;
                    box-shadow: none !important;
                    font-size: 0.9em;
                    margin: 0 auto;
                    .dropdown-divider {
                        display: none;
                    }
                }
            }
        }
    }
}
