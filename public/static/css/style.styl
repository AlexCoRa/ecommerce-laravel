color1 = #b2b2b2;

body {
    background-color: #f9f9f9;
    font-size: 14px;
    font-family: 'Roboto', Sans-Serif;
}

.form-control {
    &:hover,
    &:focus {
        box-shadow: none;
    }
}

nav {
    background-color: #fff;
    border-bottom: 2px solid color1;
    .navbar-nav {
        li.nav-item {
            a.nav-link {
                border: solid 1px #fff;
                border-radius: 5px;
                color: #444;
                font-size: .9em;
                font-weight: bold;
                margin-right: 4px;
                padding: 5px 16px !important;
                transition: all 200ms;
                img {
                    position: relative;
                    top: -5px;
                    width: 25px;
                    margin-right: 4px !important;
                }
                &:hover {
                    background-color: #474545;
                    color: #fff;
                }
            }
            a.btn {
                border: 1px solid #474545;
                transition: all 200ms;
                &:hover {
                    background-color: #474545;
                    color: #fff;
                }
            }
        }

        .link-user {
            a {
                &:hover {
                    background-color: transparent !important;
                    color: #444 !important;
                }
            }
            .dropdown-menu {
                font-size: 14px;
                width: 75%;
                border: none !important;
                box-shadow: 2px 2px 4px 1px rgba(0,0,0,0.5);
                .dropdown-item {
                    font-weight: bold !important;
                    color: #444 !important;
                    padding: 4px -1px 2px 10px;
                    transition: all 200ms !important;
                    &:hover {
                        background-color: #ccc !important;
                    }
                }
            }
        }
    }
}

.wrapper {
    .panel {
        background-color: #fff !important;
        border-radius: 10px;
        border-bottom: 2px solid #aaa;
        width: 100%;
        .header {
            border-bottom: 1px solid #ccc;

            .title {
                display: inline-block;
                color: #19213d;
                font-size: 1.1em;
                padding: 12px 16px;
                margin-bottom: 0px;
            }
            ul {
                display: inline-block;
                float: right;
                margin-right: 30px;
                z-index: 999;
                li {
                    display: inline-block;
                    position: relative;
                    transition: all 200ms;
                    &:hover {
                        background-color: #F2F2F2;
                        color: black;
                    }
                    a {
                        display: inline-block;
                        padding: 11px;
                        text-decoration: none;
                        color: #444;
                    }
                    ul {
                        display: none;
                        background-color: white;
                        float: none;
                        position: absolute;
                        width: 160px;

                        li {
                            display: block;
                            width: 100%;

                        }
                    }
                    &:hover {
                        ul {
                            display: block;
                        }
                    }
                }
            }
        }
        .inside {
            padding: 16px;
            .opts {
                a {
                    display: inline-block;
                    padding: 0px 12px;
                }
            }
            .table td, .table th {

                border-style: none !important;
            }
            .form_search {
                display: none;
                margin-bottom: 16px;
                .btn {
                    width: 100%;
                }
            }
            .big_count {
                display: block;
                text-align: center;
                width: 100%;
                font-size: 2em;
            }
        }
        .link-a {
            color: #6B6B6B;
            transition: all 300ms;
            &:hover {
                color: #444;
                transform: translateY(-5px);
                font-weight: bold;
            }
        }
    }
}
