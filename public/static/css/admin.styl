body {
    background-color: #f5f6fa;
    font-family: 'Roboto', sans-serif;
    font-size: 14px;
}
html,body,ul,h2,h3,h4,h5 {
    padding: 0px;
    margin: 0px;
}

.wrapper {
    min-height: 100vh;
    overflow: hidden;
    .col1 {
        float: left;
        position: relative;
        z-index: 999;
        width: 17%;
        background-color: red;
    }
    .col2 {
        float: left;
        width: 83%;
        background-color: blue;
    }

    .sidebar {
        background-color: #fff;
        min-height: 100vh;
        .section-top {
            background-color: #eee;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        }
        .logo {
            display: block;
            margin: -40px auto;
            padding-top: -24px;
        }
        .user {
            color: #444 !important;
            padding: 16px;
            margin-top: -10px;
            a {
                color: #444;
                font-size: 1.2em;
                i {
                    color: #777;
                    transition: all 200ms;
                    &:hover {
                        color: #444;
                    }
                }
            }
        }
        .main {
            ul {
                li {
                    margin-bottom: 4px;
                    a {
                        color: #8998ac;
                        display: block;
                        font-size: 1.1em;
                        padding: 12px 16px;
                        transition: all 300ms;
                        border-radius: 10px;

                        i {
                            margin-right: 10px;
                        }
                        &:hover {
                            text-decoration: none;
                            transform: translateX(15px);
                            color: #444 !important;
                        }
                    }
                    &:first-child {
                        margin-top: 15px;
                    }
                }
            }
        }
    }

}
