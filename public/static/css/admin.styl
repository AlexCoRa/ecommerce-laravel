body {
    background-color: #f5f6fa;
    font-family: 'Roboto', sans-serif;
    font-size: 14px;
}
html,body,ul,h2,h3,h4,h5 {
    padding: 0px;
    margin: 0px;
}

.wrapper {
    min-height: 100vh;
    overflow: hidden;
    .col1 {
        float: left;
        position: relative;
        z-index: 999;
        width: 17%;
    }
    .col2 {
        float: left;
        width: 83%;
    }

    .sidebar {
        background-color: #fff;
        min-height: 125vh;
        .section-top {
            background-color: #eee;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        }
        .logo {
            display: block;
            margin: -40px 20px;
            padding-top: -24px;
        }
        .user {
            color: #444 !important;
            padding: 16px;
            margin-top: -10px;
            a {
                color: #444;
                font-size: 1.2em;
                i {
                    color: #777;
                    transition: all 200ms;
                    &:hover {
                        color: #444;
                    }
                }
            }
        }
        .main {
            ul {
                li {
                    margin-bottom: 4px;
                    a {
                        color: #8998ac;
                        display: block;
                        font-size: 1.1em;
                        padding: 12px 16px;
                        transition: all 300ms;
                        border-radius: 10px;

                        i {
                            margin-right: 10px;
                        }
                        &:hover {
                            text-decoration: none;
                            transform: translateX(15px);
                            color: #444 !important;
                        }
                    }
                    &:first-child {
                        margin-top: 15px;
                    }
                }
            }
        }
    }
    .navbar {
        background-color: #eee;
        a {
            color: #444;
        }
    }
    .page {
        padding-top: 16px;
        padding-bottom: 4px;
        .breadcrumb {
            background-color: #fff;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.10);
            .breadcrumb-item {
                a {
                    text-decoration: none;
                    color: #8998ac;
                    transition: all 200ms;
                    &:hover {
                        color: #444;
                    }
                }
            }
        }
    }
    .panel {
        background-color: #fff !important;
        border-radius: 10px;
        border-bottom: 2px solid #aaa;
        width: 100%;
        .header {
            border-bottom: 1px solid #ccc;

            .title {
                display: inline-block;
                color: #19213d;
                font-size: 1.1em;
                padding: 12px 16px;
            }
        }
        .inside {
            padding: 16px;
            .opts {
                a {
                    display: inline-block;
                    padding: 0px 12px;
                }
            }
            .table td, .table th {
                border-top: none !important;
            }
        }
        .link-a {
            color: #6B6B6B;
            transition: all 300ms;
            &:hover {
                color: #444;
                transform: translateY(-5px);
                font-weight: bold;
            }
        }
    }

}

.product_gallery {
    overflow: hidden;
    .btn-submit {
        display: block;
        width: 100%;
        a {
            border: 1px dashed #666;
            border-radius: 4px;
            color: #333 !important;
            display: block;
            text-align: center;
            font-size: 1.5em;
            width: 100%;
            padding: 12px;
            transition: all 200ms;
            &:hover {
                background-color: #333;
                color: white !important;
            }
        }
    }
    .tumbs {
        overflow: hidden;
        margin-top: 5px;
        .tumb {
            float: left;
            position: relative;
            width: 48%;
            a {
                display: inline-block;
                position: absolute;
                bottom: 4px;
                right: 18px;
                background-color: rgba(255, 255, 255, 0.5);
                color: #444;
                padding: 6px;
                border-radius: 5px;
                transition: all 200ms;

                &:hover {
                    background-color: #444;
                    color: white;
                }
            }
            img {
                border-radius: 4px;
                width: 100%;
                margin-right: 10px;
                margin-top: 10px;
            }
        }
    }
}
